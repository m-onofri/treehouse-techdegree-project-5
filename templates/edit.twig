{% extends 'base.twig' %}
{% block content %}
    <section>
        <div class="container-edit">
            <div class="edit-entry">
                <div class="edit-header">
                    <h2>Edit Post</h2>
                        <p>{{ msg }}</p>
                    <form action="/delete" method="POST"
                        onsubmit="return confirm('Are you sure you want to delete this post?')">
                        <input type='hidden' value='{{ post.id }}' name='id' />
                        <input type='submit' class='button button-delete' value='delete' />
                    </form>
                </div>
                <form method="post" action="/edit">
                    <label for="title"> Title</label>
                    <input type="text" name="title" value="{{ post.title }}"><br>
                    <label for="entry">Entry</label>
                    <textarea rows="5" name="entry">{{ post.body }}</textarea>
                    <label for="tags">Tags</label>
                    <textarea rows="2" class="ta-tag" name="tags">{{ tags|join(", ") }}</textarea>
                    <input type="hidden" name="id" value="{{ post.id }}"><br>
                    <input type="submit" value="Update Post" class="button">
                    <a href="#" class="button button-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </section>
{% endblock %}